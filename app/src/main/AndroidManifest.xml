<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gahfy.devtools.customlink">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".DevToolsApplication">

        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ContainerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name=".data.receivers.CustomLinkReceiver"
            android:exported="false">
            <intent-filter android:priority="100">
                <action android:name="net.gahfy.devtools.data.receivers.CustomLinkReceiver" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".data.receivers.NotificationCancelReceiver"
            android:exported="false">
            <intent-filter android:priority="100">
                <action android:name="net.gahfy.devtools.data.receivers.NotificationCancelReceiver" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
